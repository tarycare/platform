{
    "compilerOptions": {
        "target": "es6", // Set to ES6 for modern JavaScript features
        "module": "esnext", // Use ESNext module system for tree-shaking and dynamic imports
        "jsx": "react-jsx", // Use the React JSX runtime
        "strict": true, // Enable strict mode to enforce type safety
        "esModuleInterop": true, // Allow default imports from modules with `export =`
        "skipLibCheck": true, // Skip type checking of declaration files (improves performance)
        "forceConsistentCasingInFileNames": true, // Ensures consistent casing in file imports
        "moduleResolution": "node", // Node-style module resolution
        "baseUrl": ".", // Same as in your `jsconfig`, sets base path for module resolution
        "paths": {
            "@/*": ["./*"] // Maintain the same alias setup as your `jsconfig`
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"], // Include TypeScript and TSX files
    "exclude": ["node_modules"] // Exclude node_modules to speed up compilation
}
